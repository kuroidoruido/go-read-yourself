---
import { Icon } from "astro-icon/components";
import { UserService } from "../services/user.service";

const isConnected = UserService.isConnectedAsAdmin(
  (name) => Astro.cookies.get(name)?.value
);
---

{
  isConnected && (
    <a class="fab btn" href="/add">
      <Icon name="lucide:file-plus" aria-hidden="true" />
      Add
    </a>
  )
}

<style>
  a.btn.fab {
    border-radius: 24px;
    display: flex;
    align-items: center;
    width: fit-content;
    position: fixed;
    bottom: 2rem;
    right: 2rem;

    svg[data-icon] {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>
