---
import {
  info as infoIcon,
  logOut as logOutIcon,
  newspaper as newspaperIcon,
  rss as rssIcon,
} from "lucide-static/lib";
import { UserService } from "../services/user.service";

interface Props {
  title: string;
}

const { title } = Astro.props;
const isConnected = UserService.isConnectedAsAdmin(
  (name) => Astro.cookies.get(name)?.value
);
---

<header>
  <a href="/">{title}</a>
  <div class="right-part">
    <a href="/feed.xml">
      <span set:html={rssIcon} />
       RSS
    </a>
    {
      isConnected && (
        <>
          <a href="/compile">
            <span set:html={newspaperIcon} />
            Compile
          </a>
          <a href="/info">
            <span set:html={infoIcon} />
            Info
          </a>
          <a href="/signout">
            <span set:html={logOutIcon} />
            Sign out
          </a>
        </>
      )
    }
  </div>
</header>

<style>
  header {
    background-color: var(--card--background-color);
    box-shadow: 1px 1px 15px var(--border-shadow);
    padding: 16px 64px;
    display: flex;
    justify-content: space-between;
  }
  header .right-part {
    display: flex;
    gap: 1rem;
  }
  header a,
  header a:visited {
    color: var(--page--text-color);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 4px;
  }
</style>
