---
import Layout from "../layouts/Layout.astro";
import NewsList from "../components/NewsList.astro";
import { NewsService } from "../services/news.service";

const posts = NewsService.getNews().news.slice(0, 10);
---

<Layout>
  <NewsList posts={posts} />
  <a class="load-more" href="/all">Load more</a>
</Layout>

<style>
  a.load-more {
    display: block;
    margin: 8px 32px;
    padding: 16px;
    border: 1px solid var(--color--primary-light);
    border-radius: 8px;
    text-align: center;
  }
</style>
