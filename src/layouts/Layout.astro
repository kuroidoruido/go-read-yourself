---
import MinimalLayout from "./MinimalLayout.astro";
import AddFab from "../components/AddFab.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ConfigService } from "../services/config.service";

import "../styles/main.css";

interface Props {
  noFAB?: boolean;
}

const { noFAB = false } = Astro.props;
const { title } = ConfigService.getConfig();
---

<MinimalLayout>
  <Fragment slot="head">
    <link
      rel="alternate"
      type="application/rss+xml"
      href="/feed.xml"
      title="RSS Feed"
    />
  </Fragment>
  <Header title={title} />
  <slot />
  <Footer />
  {!noFAB && <AddFab />}
</MinimalLayout>
